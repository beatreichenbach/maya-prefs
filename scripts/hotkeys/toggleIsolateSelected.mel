//  Description: Assign this function to Shift + i to toggle the isolate mode
//

global proc br_toggleIsolateSelected() {
    $currentPanel = `getPanel -wf`;
    $state = `isolateSelect -q -state $currentPanel`;
    $state = 1 - $state;
    enableIsolateSelect $currentPanel $state;
}
